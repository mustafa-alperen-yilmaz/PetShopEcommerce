@{
    ViewData["Title"] = "Ödeme Sayfası";
}

<div class="container mt-5">
    <form asp-controller="Payment" asp-action="GetPay" onsubmit="return validateForm()">
        <input type="text" name="return_url" value="@Context.Request.Path" hidden />

        <div class="form-group">
            <label for="shippingContactName">Alıcının Adı:</label>
            <input type="text" id="shippingContactName" name="shippingContactName" required class="form-control" />
        </div>

        <div class="form-group">
            <label for="shippingCity">Teslim Adresi (Şehir):</label>
            <input type="text" id="shippingCity" name="shippingCity" required class="form-control" />
        </div>

        <div class="form-group">
            <label for="shippingCountry">Ülke:</label>
            <input type="text" id="shippingCountry" name="shippingCountry" required class="form-control" />
        </div>

        <div class="form-group">
            <label for="shippingDescription">Açık Adres:</label>
            <input type="text" id="shippingDescription" name="shippingDescription" required class="form-control" />
        </div>

        <div class="form-group">
            <label for="shippingZipCode">Posta Kodu:</label>
            <input type="text" id="shippingZipCode" name="shippingZipCode" required class="form-control" />
        </div>

        <div class="form-group">
            <label for="billingContactName">Fatura Alıcının adı:</label>
            <input type="text" id="billingContactName" name="billingContactName" required class="form-control" />
        </div>

        <div class="form-group">
            <label for="billingCity">Fatura Adresi (Şehir):</label>
            <input type="text" id="billingCity" name="billingCity" required class="form-control" />
        </div>

        <div class="form-group">
            <label for="billingCountry">Fatura Ülkesi:</label>
            <input type="text" id="billingCountry" name="billingCountry" required class="form-control" />
        </div>

        <div class="form-group">
            <label for="billingDescription">Açık Adres:</label>
            <input type="text" id="billingDescription" name="billingDescription" required class="form-control" />
        </div>

        <div class="form-group">
            <label for="billingZipCode">Fatura Posta Kodu:</label>
            <input type="text" id="billingZipCode" name="billingZipCode" required class="form-control" />
        </div>

        <button class="btn btn-warning" type="submit">Ödemeye Devam Et</button>
    </form>
</div>


<div id="iyzipay-checkout-form" class="popup"></div>

@Html.Raw(TempData["Checkout_Form"])
<script type="text/javascript">
    $(document).ready(function () {
        alert(@TempData["status"]);
    });
</script>