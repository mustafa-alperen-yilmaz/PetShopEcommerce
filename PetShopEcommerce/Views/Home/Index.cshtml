@{
    ViewData["Title"] = "Product List";
}
@model List<Product>

<h1>Product List</h1>
@if (Model != null && Model.Count > 0)
{
    @foreach (var product in Model)
    {
        <li>
            <img src="@product.ImageURL" />
            <h4>@product.Name</h4>
            <p>@product.Description</p>
            <p>Price: @product.Price</p>
        </li>
    }
}
else
{
    <p>No products found.</p>
}

