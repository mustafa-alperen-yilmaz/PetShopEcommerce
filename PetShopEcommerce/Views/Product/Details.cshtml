@model Product

<h1>Product Details</h1>

<div>
    <img src="@Model.ImageURL" />
    <h4>@Model.Name</h4>
    <p>@Model.Description</p>
    <p>Price: @Model.Price</p>
</div>

<form id="addToCartForm" asp-controller="Cart" asp-action="AddToCart" method="post">
    <input type="hidden" name="productId" value="@Model.Id" />
    <input type="hidden" name="productName" value="@Model.Name" />
    <input type="hidden" name="price" value="@Model.Price" />
    <div>
        <span>Quantity: </span>
        <input type="number" name="quantity" value="1" min="1" />
    </div>
    <button id="addToCartButton" type="submit" class="btn btn-primary">Add to Cart</button>
</form>

<!-- Go to Cart Button -->
<form id="goToCartForm" asp-controller="Cart" asp-action="Index" method="get">
    <button id="goToCartButton" type="submit" class="btn btn-secondary">Go to Cart</button>
</form>

@section Scripts {
    <script>
        // Disable form submission for Add to Cart button
        document.getElementById('addToCartForm').addEventListener('submit', function (e) {
            e.preventDefault();

            var form = e.target;
            var formData = new FormData(form);

            fetch(form.action, {
                method: form.method,
                body: formData
            }).then(function (response) {
                if (response.ok) {
                    // Product added to cart successfully
                    // Update the cart item count in the navigation bar
                    fetch('@Url.Action("GetCartItemCount", "Cart")')
                        .then(function (response) {
                            return response.json();
                        })
                        .then(function (data) {
                            document.getElementById('cartItemCount').innerText = data;
                        });
                }
            });
        });
    </script>
}